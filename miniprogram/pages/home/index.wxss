page {
  background-color: #f9fafb;
}

.banner {
  width: 100%;
  height: 400rpx;
}

.banner swiper {
  width: 100%;
  height: 100%;
}

.banner image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
}

.banner-placeholder {  width: 100%;  height: 100%;}.empty-banner {  width: 100%;  height: 100%;  background-color: #ffffff;  border-radius: 8rpx;}

.quick-actions {
  display: flex;
  justify-content: center;
  padding: 30rpx;
  margin: 20rpx;
  gap: 32rpx;
}

.quick-action-item {
  width: 260rpx;
  height: 200rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 20rpx;
}

.quick-action-icon {
  width: 72rpx;
  height: 72rpx;
  background: transparent;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.quick-action-icon .iconfont {
  font-size: 48rpx;
  color: #6366f1;
}

.quick-action-icon .icon-image {
  width: 72rpx;
  height: 72rpx;
  object-fit: contain;
}

.quick-action-text {
  font-size: 30rpx;
  color: #333;
  font-weight: 600;
  margin-top: 8rpx;
}

.notice-board {
  background: #fff;
  padding: 30rpx;
  margin: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.notice-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  border-left: 8rpx solid #3a7eff;
  padding-left: 20rpx;
}

.notice-list {
  padding: 10rpx 0;
}

.notice-item {
  display: flex;
  align-items: flex-start;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1px solid #f0f0f0;
}

.notice-item:last-child {
  margin-bottom: 0;
  padding-bottom: 0;
  border-bottom: none;
}

.notice-dot {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #3a7eff;
  margin-top: 14rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
}

.notice-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
  flex: 1;
  font-weight: 500;
}

.notice-empty {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 40rpx 0;
}

/* 加载状态 */
.loading {
  display: flex;
  justify-content: center;
  padding: 20rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 公告详情弹窗 */
.notice-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
}

.notice-modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
}

.notice-modal-content {
  position: relative;
  width: 85%;
  max-height: 75%;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  z-index: 1001;
}

.notice-modal-header {
  padding: 30rpx 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.notice-modal-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  flex: 1;
  padding-right: 20rpx;
}

.notice-modal-close {
  font-size: 48rpx;
  color: #999;
  line-height: 1;
  padding: 0 10rpx;
}

.notice-modal-body {
  padding: 30rpx;
  overflow-y: auto;
}

.notice-modal-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.notice-modal-text {
  font-size: 30rpx;
  color: #666;
  line-height: 1.8;
} 