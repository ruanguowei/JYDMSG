.notice-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1000;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.notice-modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4rpx);
}

.notice-modal-content {
  position: relative;
  width: 100%;
  max-width: 600rpx;
  max-height: 80%;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  z-index: 1001;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
}

.notice-modal-header {
  padding: 40rpx 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  border-bottom: 2rpx solid #f5f5f5;
  background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
}

.notice-modal-title {
  font-size: 38rpx;
  font-weight: 700;
  color: #2c3e50;
  flex: 1;
  padding-right: 20rpx;
  line-height: 1.4;
  word-break: break-all;
}

.notice-modal-close {
  font-size: 44rpx;
  color: #95a5a6;
  line-height: 1;
  padding: 8rpx;
  border-radius: 50%;
  transition: all 0.3s ease;
  flex-shrink: 0;
}

.notice-modal-close:active {
  background-color: #ecf0f1;
  color: #7f8c8d;
}

.notice-modal-body {
  padding: 40rpx;
  overflow-y: auto;
  flex: 1;
}

.notice-modal-time {
  font-size: 26rpx;
  color: #7f8c8d;
  margin-bottom: 30rpx;
  padding: 16rpx 20rpx;
  background-color: #f8f9fa;
  border-radius: 12rpx;
  border-left: 6rpx solid #3498db;
  display: flex;
  align-items: center;
}

.notice-modal-time::before {
  content: "üìÖ";
  margin-right: 12rpx;
  font-size: 24rpx;
}

.notice-modal-text {
  font-size: 32rpx;
  color: #34495e;
  line-height: 1.8;
  white-space: pre-wrap;
  word-break: break-word;
  text-align: justify;
}

