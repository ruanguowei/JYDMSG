.quick-actions {
  display: flex;
  justify-content: center;
  padding: 30rpx;
  margin: 20rpx;
  gap: 32rpx;
}

.quick-action-item {
  width: 260rpx;
  height: 200rpx;
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 30rpx 20rpx;
