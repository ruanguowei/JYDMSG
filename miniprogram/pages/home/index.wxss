.quick-action-icon {
  width: 72rpx;
  height: 72rpx;
  background: transparent;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}

.quick-action-icon .iconfont {
  font-size: 48rpx;
