/* pages/expert-login/index.wxss */
.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 60rpx 40rpx 40rpx;
}

.header {
  text-align: center;
  margin-bottom: 80rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 20rpx;
}

.subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.login-form {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
  overflow: hidden;
}

.form-item {
  margin-bottom: 40rpx;
}

.label {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 10rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  background: #f8f9fa;
  box-sizing: border-box;
  display: block;
}

.input:focus {
  border-color: #4b6bfb;
  background: #ffffff;
}

.rules-tip {
  font-size: 24rpx;
  color: #666666;
  text-align: center;
  margin-bottom: 40rpx;
}

.rules-link {
  color: #4b6bfb;
  text-decoration: underline;
}

.login-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #4b6bfb 0%, #3b5bdb 100%);
  color: #ffffff;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.login-btn.loading {
  opacity: 0.7;
}

.login-btn::after {
  border: none;
}

.time-tip {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 15rpx;
  padding: 30rpx;
  text-align: center;
}

.tip-title {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.tip-content {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 10rpx;
}

.tip-note {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.7);
}

/* 评审规则弹窗样式 */
.rules-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.rules-content {
  width: 90%;
  max-height: 80%;
  background: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
}

.rules-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.rules-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.close-btn {
  font-size: 40rpx;
  color: #999999;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.rules-body {
  padding: 30rpx 40rpx;
  max-height: 60vh;
  overflow-y: auto;
}

.rules-section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #4b6bfb;
  margin-bottom: 15rpx;
}

.section-content {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

.rules-footer {
  padding: 30rpx 40rpx;
  border-top: 2rpx solid #f0f0f0;
}

.agree-btn {
  width: 100%;
  height: 70rpx;
  background: #4b6bfb;
  color: #ffffff;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.agree-btn::after {
  border: none;
}
