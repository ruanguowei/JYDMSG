/* pages/pottery-submission/index.wxss */
page {
  background-color: #f6f6f6;
  min-height: 100vh;
  padding-bottom: 40rpx;
  box-sizing: border-box;
}

.container {
  width: 100%;
  padding-bottom: 60rpx;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin: 40rpx 0;
  color: #333;
}

.submission-form {
  padding: 0 30rpx;
}

.form-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.card-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 20rpx;
  border-bottom: 1px solid #f0f0f0;
  padding-bottom: 15rpx;
}

.card-title::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-70%);
  width: 6rpx;
  height: 30rpx;
  background-color: #4e6ef2;
  border-radius: 3rpx;
}

.form-row {
  display: flex;
  margin-bottom: 30rpx;
}

.form-cell {
  flex: 1;
}

.form-cell:first-child {
  margin-right: 20rpx;
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.required::after {
  content: '*';
  color: #ff4d4f;
  margin-left: 4rpx;
}

.form-tip {
  font-size: 24rpx;
  color: #999;
  margin-top: 8rpx;
}

.form-input {
  width: 100%;
  height: 88rpx;
  border: 1rpx solid #e6e6e6;
  border-radius: 8rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  background-color: #f9f9f9;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #e6e6e6;
  border-radius: 8rpx;
  padding: 20rpx 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  background-color: #f9f9f9;
}

/* 作品尺寸输入框 */
.dimension-inputs {
  display: flex;
  align-items: center;
}

.dimension-input {
  width: 200rpx;
  height: 88rpx;
  border: 1rpx solid #e6e6e6;
  border-radius: 8rpx;
  text-align: center;
  padding: 0 16rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  background-color: #f9f9f9;
}

.dimension-separator {
  margin: 0 15rpx;
  color: #666;
  font-size: 28rpx;
}

/* 作品类别选项 */
.category-options {
  display: flex;
  flex-wrap: wrap;
  margin-top: 16rpx;
}

.category-option {
  font-size: 24rpx;
  color: #666;
  margin-right: 20rpx;
  padding: 8rpx 16rpx;
  background-color: #f0f0f0;
  border-radius: 20rpx;
}

/* 上传区域 */
.upload-container {
  display: flex;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.upload-button {
  width: 160rpx;
  height: 160rpx;
  border: 1rpx dashed #ccc;
  border-radius: 8rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  background-color: #f9f9f9;
}

.upload-icon {
  font-size: 60rpx;
  color: #999;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.upload-preview {
  width: 160rpx;
  height: 160rpx;
  position: relative;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
  overflow: hidden;
}

.upload-preview image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.upload-delete {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
  z-index: 10;
}

.upload-single {
  display: flex;
}

.upload-single .upload-preview,
.upload-single .upload-button {
  width: 200rpx;
  height: 240rpx;
}

.upload-tips {
  display: flex;
  flex-direction: column;
  font-size: 24rpx;
  color: #999;
  padding-top: 10rpx;
}

.upload-tips text {
  margin-bottom: 10rpx;
  line-height: 1.4;
}

/* 选择器样式 */
.picker {
  width: 100%;
  height: 88rpx;
  border: 1rpx solid #e6e6e6;
  border-radius: 8rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #333;
  background-color: #f9f9f9;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
}

.placeholder {
  color: #999;
}

/* 协议样式 */
.form-agreement {
  margin: 20rpx 0 40rpx;
}

.agreement-label {
  display: flex;
  align-items: center;
}

.agreement-text {
  font-size: 26rpx;
  color: #666;
  margin-left: 10rpx;
}

/* 提交按钮 */
.submit-button {
  margin-top: 40rpx;
  background-color: #4e6ef2;
  color: #fff;
  height: 88rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  line-height: normal;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  width: 100%;
}

.submit-button[disabled] {
  background-color: #8aa2f2;
  color: rgba(255, 255, 255, 0.8);
}