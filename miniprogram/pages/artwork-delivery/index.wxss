/* pages/artwork-delivery/index.wxss */

page {
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: #f7f7f7;
}

.container {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-height: 100vh;
  box-sizing: border-box;
  padding-bottom: 40rpx;
  background-color: #f7f7f7;
}

/* 页面标题 */
.page-header {
  background: linear-gradient(to right, #4568dc, #5e7cef);
  padding: 30rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  box-sizing: border-box;
}

.page-title {
  font-size: 36rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
}

.title-icon {
  margin-right: 15rpx;
  font-size: 40rpx;
}

/* 表单样式 */
form {
  flex: 1;
  display: flex;
  flex-direction: column;
  width: 100%;
}

/* 表单分组样式 */
.form-section {
  background: white;
  margin: 20rpx;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  padding-left: 20rpx;
  border-left: 6rpx solid #4b6bfb;
}

.section-tip {
  font-size: 24rpx;
  color: #ff6b35;
  background: #fff3e0;
  padding: 15rpx 20rpx;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  border-left: 4rpx solid #ff6b35;
}

.form-group {
  background: white;
  border-radius: 15rpx;
  margin: 30rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
  flex: 1;
  width: calc(100% - 60rpx);
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.form-item {
  margin-bottom: 30rpx;
  width: 100%;
}

.form-label {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.required::after {
  content: ' *';
  color: #e64340;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #fff;
}

/* 选择器样式 */
.picker-input {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  background-color: #fff;
  position: relative;
  color: #333;
}

.picker-arrow {
  color: #999;
  font-size: 24rpx;
}

.date-picker {
  position: relative;
}

.picker-calendar-icon {
  position: absolute;
  right: 20rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
}

/* 图片上传样式 */
.image-uploader {
  width: 100%;
  min-height: 250rpx;
}

.uploader-info {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.uploader-files {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  min-height: 220rpx;
}

.uploader-file {
  width: 180rpx;
  height: 180rpx;
  position: relative;
  border: 1px solid #eee;
  border-radius: 8rpx;
  overflow: hidden;
}

.uploader-image {
  width: 100%;
  height: 100%;
}

.uploader-delete {
  position: absolute;
  top: 5rpx;
  right: 5rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
}

.uploader-add {
  width: 180rpx;
  height: 180rpx;
  border: 1px dashed #ddd;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #999;
  background-color: #fff;
}

.uploader-add-icon {
  margin-bottom: 10rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.uploader-add-icon image {
  width: 100%;
  height: 100%;
}

.uploader-add-text {
  font-size: 24rpx;
  text-align: center;
  padding: 0 10rpx;
}

/* 提交按钮 */
.submit-btn {
  width: 90%;
  height: 90rpx;
  background-color: #4568dc;
  color: white;
  border-radius: 45rpx;
  margin-top: 50rpx;
  margin-bottom: 30rpx;
  font-size: 32rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  align-self: center;
}

/* 重要提示区域 */
.notice-section {
  width: calc(100% - 60rpx);
  margin: 0 30rpx 30rpx;
  border-radius: 15rpx;
  overflow: hidden;
  background-color: white;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.notice-header {
  background-color: #f0f2f5;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
}

.notice-icon {
  color: #4568dc;
  font-size: 36rpx;
  margin-right: 10rpx;
}

.notice-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.notice-item {
  padding: 20rpx 30rpx;
  border-bottom: 1rpx solid #f0f2f5;
}

.notice-blue {
  background-color: #f0f8ff;
}

.notice-yellow {
  background-color: #fffbeb;
}

.notice-red {
  background-color: #fff5f5;
}

.notice-item-title {
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.notice-item-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

.notice-bullet {
  margin: 5rpx 0;
}

.notice-link {
  padding: 20rpx 30rpx;
  font-size: 26rpx;
  color: #4568dc;
  text-align: center;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: white;
  border-radius: 15rpx;
  width: 80%;
  padding: 50rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
}

.success {
  background-color: #e6f7ff;
  color: #1890ff;
}

.error {
  background-color: #fff1f0;
  color: #f5222d;
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.modal-message {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 40rpx;
}

.modal-button {
  width: 80%;
  height: 80rpx;
  background-color: #4568dc;
  color: white;
  border-radius: 40rpx;
  font-size: 30rpx;
}

/* 详情弹窗样式 */
.detail-modal {
  width: 90%;
  max-height: 85%;
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.detail-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.detail-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 10rpx;
}

.detail-body {
  flex: 1;
  max-height: 650rpx;
  overflow-y: auto;
  padding: 0 30rpx;
}

.detail-section {
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

.detail-section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.detail-item {
  display: flex;
  margin-bottom: 20rpx;
  align-items: flex-start;
}

.detail-label {
  width: 200rpx;
  font-size: 26rpx;
  color: #666;
}

.detail-value {
  flex: 1;
  font-size: 26rpx;
  color: #333;
  word-break: break-all;
}

.detail-images {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
}

.detail-image-item {
  width: 150rpx;
  height: 150rpx;
  border-radius: 8rpx;
  overflow: hidden;
  border: 1rpx solid #eee;
}

.detail-image-item image {
  width: 100%;
  height: 100%;
}

.detail-footer {
  padding: 20rpx 30rpx;
  border-top: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
}

.detail-btn {
  width: 45%;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.delete-btn {
  background-color: #fff;
  color: #f5222d;
  border: 1px solid #f5222d;
}

.edit-btn {
  background-color: #4568dc;
  color: white;
}