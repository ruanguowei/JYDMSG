<!--pages/expert-evaluation/index.wxml-->
<view class="evaluation-container">
  <!-- 专家信息头部 -->
  <view class="expert-header">
    <view class="expert-info">
      <view class="expert-name">专家：{{expertInfo.expertName}}</view>
      <view class="logout-btn" bindtap="logout">退出</view>
    </view>
    <view class="evaluation-stats">
      <view class="stat-item">
        <view class="stat-number">{{evaluationStats.total}}</view>
        <view class="stat-label">总作品</view>
      </view>
      <view class="stat-item">
        <view class="stat-number">{{evaluationStats.evaluated}}</view>
        <view class="stat-label">已评选</view>
      </view>
      <view class="stat-item">
        <view class="stat-number">{{evaluationStats.remaining}}</view>
        <view class="stat-label">待评选</view>
      </view>
    </view>
  </view>

  <!-- 分类筛选 -->
  <view class="category-filter">
    <scroll-view class="category-scroll" scroll-x="true">
      <view class="category-list">
        <view 
          wx:for="{{categories}}" 
          wx:key="key"
          class="category-item {{selectedCategory === item.key ? 'active' : ''}}"
          data-category="{{item.key}}"
          bindtap="onCategoryChange"
        >
          {{item.name}}
        </view>
      </view>
    </scroll-view>
  </view>

  <!-- 作品列表 -->
  <view class="submissions-list">
    <view wx:if="{{loading}}" class="loading">
      <view class="loading-spinner"></view>
      <text>加载中...</text>
    </view>

    <view wx:elif="{{filteredSubmissions.length === 0}}" class="empty">
      <image src="/images/icons/noDate.png" class="empty-icon"></image>
      <text class="empty-text">暂无作品</text>
    </view>

    <view wx:else>
      <view 
        wx:for="{{filteredSubmissions}}" 
        wx:key="id"
        class="submission-item {{item.isEvaluated ? 'evaluated' : ''}}"
        data-id="{{item.id}}"
        bindtap="navigateToScoring"
      >
        <view class="submission-image">
          <image src="{{item.imageUrl}}" mode="aspectFill"></image>
          <view wx:if="{{item.isEvaluated}}" class="evaluated-tag">已评选</view>
        </view>
        
        <view class="submission-info">
          <view class="submission-title">{{item.title}}</view>
          <view class="submission-author">作者：{{item.authorName}}</view>
          <view class="submission-category">分类：{{item.categoryName}}</view>
          <view class="submission-school">学校：{{item.schoolName}}</view>
          
          <view wx:if="{{item.isEvaluated}}" class="submission-score">
            <text class="score-label">评分：</text>
            <text class="score-value">{{item.totalScore}}分</text>
          </view>
        </view>
        
        <view class="submission-arrow">
          <text class="arrow">></text>
        </view>
      </view>
    </view>
  </view>

  <!-- 底部操作栏 -->
  <view class="bottom-actions">
    <button class="action-btn secondary" bindtap="navigateToResults">
      查看结果
    </button>
    <button class="action-btn primary" bindtap="fetchSubmissions">
      刷新列表
    </button>
  </view>
</view>
