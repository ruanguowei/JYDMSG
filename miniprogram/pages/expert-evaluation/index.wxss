/* pages/expert-evaluation/index.wxss */
.evaluation-container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.expert-header {
  background: #ffffff;
  padding: 30rpx 40rpx;
  margin-bottom: 20rpx;
}

.expert-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.expert-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.logout-btn {
  font-size: 26rpx;
  color: #999999;
  padding: 10rpx 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 20rpx;
}

.evaluation-stats {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
}

.stat-number {
  font-size: 36rpx;
  font-weight: bold;
  color: #4b6bfb;
  margin-bottom: 10rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666666;
}

.category-filter {
  background: #ffffff;
  padding: 20rpx 0;
  margin-bottom: 20rpx;
}

.category-scroll {
  white-space: nowrap;
}

.category-list {
  display: flex;
  padding: 0 40rpx;
}

.category-item {
  display: inline-block;
  padding: 15rpx 30rpx;
  margin-right: 20rpx;
  font-size: 26rpx;
  color: #666666;
  background: #f8f9fa;
  border-radius: 25rpx;
  white-space: nowrap;
}

.category-item.active {
  background: #4b6bfb;
  color: #ffffff;
}

.submissions-list {
  padding: 0 20rpx;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f0f0f0;
  border-top: 4rpx solid #4b6bfb;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999999;
}

.submission-item {
  display: flex;
  background: #ffffff;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.submission-item.evaluated {
  border-left: 6rpx solid #52c41a;
}

.submission-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  overflow: hidden;
  margin-right: 30rpx;
  position: relative;
}

.submission-image image {
  width: 100%;
  height: 100%;
}

.evaluated-tag {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  background: #52c41a;
  color: #ffffff;
  font-size: 20rpx;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
}

.submission-info {
  flex: 1;
}

.submission-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.submission-author,
.submission-category,
.submission-school {
  font-size: 24rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.submission-score {
  margin-top: 15rpx;
  display: flex;
  align-items: center;
}

.score-label {
  font-size: 24rpx;
  color: #666666;
}

.score-value {
  font-size: 28rpx;
  font-weight: bold;
  color: #4b6bfb;
  margin-left: 10rpx;
}

.submission-arrow {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 40rpx;
}

.arrow {
  font-size: 32rpx;
  color: #cccccc;
}

.bottom-actions {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 20rpx 40rpx;
  border-top: 2rpx solid #f0f0f0;
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn.primary {
  background: #4b6bfb;
  color: #ffffff;
}

.action-btn.secondary {
  background: #f8f9fa;
  color: #666666;
  border: 2rpx solid #e0e0e0;
}

.action-btn::after {
  border: none;
}
