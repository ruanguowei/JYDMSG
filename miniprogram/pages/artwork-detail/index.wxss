page {
  background-color: #f9fafb;
  padding-bottom: 100rpx;
}

.artwork-header {
  position: relative;
}

.artwork-image {
  width: 100%;
  height: 480rpx;
  display: block;
}

.back-button {
  position: absolute;
  top: 32rpx;
  left: 32rpx;
  width: 72rpx;
  height: 72rpx;
  background: rgba(0,0,0,0.3);
  backdrop-filter: blur(4px);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  z-index: 10;
}

.back-button .iconfont {
  font-size: 36rpx;
  color: #fff;
}

.info-section {
  background: white;
  padding: 40rpx;
  margin-bottom: 32rpx;
}

.artwork-title {
  font-size: 40rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.artwork-rating {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  margin-bottom: 24rpx;
}

.artwork-rating .iconfont {
  font-size: 32rpx;
  color: #4b6bfb;
  margin-right: 8rpx;
}

.rating-value {
  color: #666;
  margin-right: 24rpx;
}

.rating-count {
  color: #999;
}

.artwork-tags {
  display: flex;
  flex-wrap: wrap;
  margin-top: 24rpx;
}

.tag {
  font-size: 24rpx;
  background: #f0f7ff;
  color: #4b6bfb;
  padding: 8rpx 24rpx;
  border-radius: 32rpx;
  margin-right: 16rpx;
  margin-bottom: 16rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

.author-info {
  display: flex;
  align-items: center;
}

.author-avatar {
  width: 80rpx;
  height: 80rpx;
  background: #f0f7ff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.author-avatar .iconfont {
  font-size: 40rpx;
  color: #4b6bfb;
}

.author-detail {
  margin-left: 24rpx;
}

.author-name {
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
}

.author-desc {
  font-size: 24rpx;
  color: #999;
  margin-top: 4rpx;
}

.artwork-desc {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.expert-comment {
  border-left: 8rpx solid #4b6bfb;
  padding-left: 24rpx;
}

.comment-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.comment-author {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

.action-buttons {
  display: flex;
  padding: 0 32rpx;
  gap: 24rpx;
  margin-top: 24rpx;
}

.action-button {
  flex: 1;
  height: 88rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
}

.rating-button {
  background-color: #f0f7ff;
  color: #4b6bfb;
}

.share-button {
  background-color: #4b6bfb;
  color: #fff;
}

.rating-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s;
}

.rating-modal.show {
  opacity: 1;
  visibility: visible;
}

.rating-modal-content {
  width: 80%;
  background: #fff;
  border-radius: 16rpx;
  padding: 48rpx 32rpx;
  box-sizing: border-box;
}

.rating-modal-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

.rating-stars {
  display: flex;
  justify-content: center;
  margin-bottom: 40rpx;
}

.star {
  margin: 0 12rpx;
}

.star .iconfont {
  font-size: 60rpx;
  color: #ddd;
}

.star.active .iconfont {
  color: #ffc107;
}

.rating-buttons {
  display: flex;
  gap: 20rpx;
}

.rating-buttons button {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  margin: 0;
}

.cancel-button {
  background: #f5f5f5;
  color: #666;
}

.confirm-button {
  background: #4b6bfb;
  color: #fff;
} 